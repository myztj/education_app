.lsit_item_box {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 0.5px solid #ccc;
}
.lsit_item_box .item_left {
  width: 290rpx;
  height: 160rpx;
  position: relative;
  margin-right: 30rpx;
}
.lsit_item_box .item_left .time {
  position: absolute;
  bottom: 5rpx;
  right: 5rpx;
  padding: 0 10rpx;
  font-size: 15rpx;
  color: #fff;
  border-radius: 30rpx;
  background: rgba(0, 0, 0, 0.5);
}
.lsit_item_box .item_left > image {
  width: 100%;
  height: 100%;
  border-radius: 15rpx;
}
.lsit_item_box .item_right {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.lsit_item_box .item_right .right_title {
  max-width: 365rpx;
  height: 70rpx;
  line-height: 35rpx;
  font-size: 28rpx;
  font-weight: bold;
}
.lsit_item_box .item_right .name {
  color: #ccc;
  font-size: 25rpx;
  margin: 10rpx 0 5rpx 0;
}
.lsit_item_box .item_right .info .icon-bofang_xiayijie {
  color: #f60;
  margin-right: 20rpx;
  font-size: 28rpx;
}
.lsit_item_box .item_right .info .icon-download {
  color: #666;
  font-size: 25rpx;
}

