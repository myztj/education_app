page {
  height: 100%;
}
.box {
  height: 100%;
  display: flex;
}
.box .classify_left {
  width: 200rpx;
  background-color: #F8F9FB;
}
.box .classify_left .left_item {
  padding: 50rpx 5rpx;
  font-size: 29rpx;
  text-align: center;
  position: relative;
}
.box .classify_left .left_item::before {
  position: absolute;
  top: 50%;
  left: 0;
  -webkit-transform: translateY(-50%);
          transform: translateY(-50%);
  content: "";
  width: 0;
  height: 0;
  border-left: 6rpx solid #f60;
  transition: 0.5s;
}
.box .classify_left .active {
  font-weight: 600;
  color: #f60;
}
.box .classify_left .active:before {
  height: 60rpx;
}
.box .classify_rigth {
  margin-left: 15rpx;
  margin-top: 20rpx;
  flex: 1;
}
.box .classify_rigth .right_item {
  display: flex;
  flex-wrap: wrap;
}
.box .classify_rigth .right_item > view {
  min-width: 160rpx;
  padding: 15rpx 7rpx;
  margin: 15rpx 7rpx;
  border: 1rpx solid #ccc;
  border-radius: 40rpx;
  text-align: center;
  font-size: 25rpx;
}

